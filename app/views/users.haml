%div
  %header
    %h2
      Users
  .content
    %h3
      Users list
    %table
      %thead
        %tr
          %th.name
            Name
          %th.email
            Email
          %th.role
            Role
          %th.action
            Actions
      %tbody
        - @users.each do |user|
          %tr
            %td
              %a{:href => "/users/#{user.id}"}
                = user.name
            %td
              = user.email
            %td
              = user.role
            %td
              %a{:rel => "nofollow", :"data-method" => "delete", :"data-confirm" => "Are you sure?", :href => "/users/#{user.id}"}
                Delete

              %form{:action => "/users/#{user.id}", :method => "post"}
                %input{:type => "hidden", :name => "_method", :value => "delete"}
                %input{:type => "hidden", :name => "id", :value => user.id}
                %button{:type => "submit"}
                  Delete
    - if params[:page].to_i > 1
      %a{:href => "users?page=#{params[:page].to_i - 1}"}
        Prev
      %a{:href => "users?page=#{params[:page].to_i + 1}"}
        Next
    - elsif params[:page] == 1 or params[:page].blank?
      %a{:href => "users?page=2"}
        Next
